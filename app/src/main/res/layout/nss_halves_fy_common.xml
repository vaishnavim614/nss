<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="@dimen/space_10dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:paddingStart="@dimen/space_10dp"
        android:paddingEnd="@dimen/space_10dp"
        android:id="@+id/nss_halves_Linear"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainFY_main">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp">

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_light"
                android:textColor="@color/blackish"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/google_sans_bold"
                android:id="@+id/firstButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="First Year"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/line_fy"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="55dp">

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple_light"
                android:textColor="@color/blackish"
                android:textAllCaps="false"
                android:textSize="16.5sp"
                android:gravity="center"
                android:fontFamily="@font/google_sans_bold"
                android:id="@+id/secButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Second Year"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>