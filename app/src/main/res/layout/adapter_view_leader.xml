<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leaderDataCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="@dimen/padding_5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_leader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_base_color="@color/blackGrey"
        app:shimmer_colored="true"
        app:shimmer_highlight_color="@color/colorPrimaryShadow">

        <LinearLayout
            android:id="@+id/cardLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/space_10dp">

            <TextView
                android:id="@+id/vol_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3dp"
                android:fontFamily="@font/google_sans"
                android:gravity="start"
                android:textColor="@color/blackGrey"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linearLeaderShim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginBottom="@dimen/space_3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vol_vec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>