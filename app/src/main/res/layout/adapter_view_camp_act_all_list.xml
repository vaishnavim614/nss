<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/campActListAllCard"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/space_3dp"
    android:layout_marginEnd="@dimen/space_3dp"
    android:layout_marginBottom="@dimen/space_10dp"
    android:elevation="12dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/google_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Camp Title:"
                android:textColor="@color/blackGrey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/camp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/grey"
                android:fontFamily="@font/google_sans"
                android:id="@+id/camp_act_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/google_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Camp Desc:"
                android:textColor="@color/blackGrey"
                android:textSize="18sp" />

            <TextView
                android:textColor="@color/grey"
                android:fontFamily="@font/google_sans"
                android:id="@+id/camp_act_list_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/google_sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Camp Day:"
                android:textColor="@color/blackGrey"
                android:textSize="18sp" />

            <TextView
                android:textColor="@color/grey"
                android:fontFamily="@font/google_sans"
                android:id="@+id/camp_act_list_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>