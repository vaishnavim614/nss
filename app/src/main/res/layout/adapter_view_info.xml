<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/infoDataCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/padding_5dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="@dimen/padding_5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftChild"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/helpbg_two"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="@dimen/padding_5dp"
                android:paddingStart="@dimen/space_10dp">

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="1.5dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:textColor="@color/blackGrey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/info_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightChild"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/helpbg_thr"
                android:gravity="bottom|end"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/space_10dp"
                android:paddingBottom="@dimen/space_10dp">

                <ImageView
                    android:id="@+id/git_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_git_24_white" />

                <ImageView
                    android:id="@+id/ig_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:src="@drawable/ic_linkedin_24_white" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>