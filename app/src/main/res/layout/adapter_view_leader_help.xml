<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leaderHelpDataCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/space_20dp"
            android:layout_height="3dp"
            android:alpha=".3"
            android:backgroundTint="@color/blackGrey"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2.5dp"
            android:background="@drawable/help_round_bg" />

        <LinearLayout
            android:id="@+id/cardLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:minHeight="60dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_10dp"
            android:paddingEnd="@dimen/space_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:gravity="start"
                    android:textColor="@color/blackGrey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clgNameLead"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/space_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/google_sans_bold"
                    android:gravity="end"
                    android:textColor="@color/blackGrey"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lead_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/google_sans"
                    android:textColor="@color/blackGrey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lead_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/google_sans"
                    android:textColor="@color/blackGrey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lead_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@color/shimmer_bg"
                    android:fontFamily="@font/google_sans"
                    android:textColor="@color/blackGrey"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>